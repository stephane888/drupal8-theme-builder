
<header id="header" class="header" role="banner" aria-label="{{ 'Site header'|t}}">  
  <div class=" header-menu {{ theme_builder_header.position }} {{ theme_builder_header.container }}"  >
      {% block head %}     
         
       <!-- <div class="d-flex"> -->
            {% if page.header %}
                <div class="d-flex container-logo">{{ page.header }}</div>
            {% endif %} 
            {% if page.secondary_menu or page.top_header %}
              <nav{{ navbar_attributes.addClass('navbar-light') }}>  
                {% if page.primary_menu or page.header_form %}
                  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#CollapsingNavbar" aria-controls="CollapsingNavbar" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                  <div class="collapse navbar-collapse" id="CollapsingNavbar">
                    {{ page.primary_menu }}
                    {% if page.header_form %}
                      <div class="form-inline navbar-form float-right">
                        {{ page.header_form }}
                      </div>
                    {% endif %}
                </div>
                {% endif %}
                {% if sidebar_collapse %}
                  <button class="navbar-toggler navbar-toggler-left" type="button" data-toggle="collapse" data-target="#CollapsingLeft" aria-controls="CollapsingLeft" aria-expanded="false" aria-label="Toggle navigation"></button>
                {% endif %}
             </nav>
             {#
              <nav{{ navbar_top_attributes.addClass('d-none') }}>              
                      {{ page.secondary_menu }}
                      {{ page.top_header }}
              </nav>
              #}
            {% endif %}
            {% if page.top_header_form or theme_builder_header.texte%}
              <div class="form-inline navbar-form call-to-action-header">
                {% if logged_in %}
                  <a href="/form-node-vuejs/add/node/theme_builder" class="btn btn-success" title="{{ theme_builder_header.texte }}" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-plus"></i> <span>{{ theme_builder_header.texte }}</span></a>
                {% else %}
                  <a href="#" class="btn btn-primary" title="{{ theme_builder_header.texte }}" data-toggle="modal" data-target="#inscriptionLogin"> <i class="fas fa-plus"></i> <span>{{ theme_builder_header.texte }}</span></a>
                  
                  
                {% endif %}
                {{ page.top_header_form }}
              </div>
            {% endif %}
        <!-- </div> -->
      {% endblock %}   
  </div>
</header>

